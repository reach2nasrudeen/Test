<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="cardItem"
            type="com.interview.test.model.CardItem" />

    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/card_bg"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="25dp"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_bank_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="@{cardItem.bankName}"
                tools:text="Dutch Bangla Bank" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_card_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{cardItem.formattedCardNumber()}"
                    tools:text="**** **** **** 1690" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_card_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{cardItem.cardCategory}"
                        tools:text="Platinum Plus" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_card_expiry_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="@{cardItem.cardExpiryData()}"
                        android:visibility="@{cardItem.isCardHolderNameAvailable() ? View.VISIBLE : View.GONE}"
                        tools:ignore="RelativeOverlap"
                        tools:text="Exp 01/22" />
                </RelativeLayout>
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_card_holder_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="@{cardItem.isCardHolderNameAvailable() ? cardItem.cardHolderName : cardItem.cardExpiryData()}"
                tools:text="Exp 01/22" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_card_type"
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_vd_visa_2" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</layout>