<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextRegular">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextMedium">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextBold">
        <item name="fontFamily">sans-serif-black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <declare-styleable name="CustomItemView">
        <attr name="text" format="string" />
        <attr name="icon" format="reference" />
        <attr name="card_bg" format="reference" />
    </declare-styleable>


    <style name="CustomButtonShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="CustomTabTextAppearance" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>