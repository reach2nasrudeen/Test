<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextRegular">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextMedium">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextBold">
        <item name="fontFamily">sans-serif-black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <declare-styleable name="CustomItemView">
        <attr name="text" format="string" />
        <attr name="icon" format="reference" />
        <attr name="card_bg" format="reference" />
    </declare-styleable>


    <style name="CustomTabTextAppearance" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Chart1Line1Style">
        <item name="color">@color/blue</item>
    </style>

    <style name="Chart1LineLayerStyle">
        <item name="line1Style">@style/Chart1Line1Style</item>
        <item name="color">@color/blue</item>
    </style>
    <style name="Chart1BottomAxisStyle">
        <item name="color">@color/blue</item>
    </style>


    <style name="Chart9StartAxisStyle">
        <item name="maxVerticalAxisItemCount">5</item>
        <item name="showGuidelines">false</item>
<!--        <item name="addExtremeHorizontalAxisLabelPadding">true</item>-->
    </style>

    <style name="Chart9BottomAxisStyle">
        <item name="horizontalAxisLabelSpacing">2</item>
        <item name="showGuidelines">false</item>
<!--        <item name="addExtremeHorizontalAxisLabelPadding">true</item>-->
    </style>
</resources>